<p id="notice"><%= notice %></p>

<h1><%= ConsoleType.model_name.human(count: @console_types.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @console_types.human_attribute_name(:description) %></th>
      <th><%= @console_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @console_types.each do |console_type| %>
      <tr>
        <td><%= console_type.description %></td>
        <td><%= console_type.acronym %></td>
        <td><%= link_to t('links.show'), console_type %></td>
        <td><%= link_to t('links.edit'), edit_console_type_path(console_type) %></td>
        <td><%= link_to t('links.delete'), console_type, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  t('links.new'), new_console_type_path, class:"btn btn-primary" %>
<%= link_to  t('links.back'), welcome_index_path, class:"btn btn-primary" %>
